.fold[open] {
  border-bottom: 2px solid #eee;
  background-image: linear-gradient(#eee, transparent 100px);
}

.fold > summary {
  display: list-item;
  background-color: #eee;
  padding: 4px 6px;
}

.fold > summary:hover {
  cursor: pointer;
}

.fold[open] > summary {
  background-color: transparent;
}